		"eslint-plugin-sort-keys-fix": "^1.1.2",
		"eslint-plugin-testing-library": "^5.5.1",
		"eslint-plugin-unicorn": "^43.0.2",
		"eslint-plugin-unused-imports": "^2.0.0",
		"jest": "^28.1.3",
		"prettier": "^2.7.1",
		"typescript": "^4.7.4"
